// learn more about it in the docs https//pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Person {
  id               String   @id
  userId           String
  gender           String
  location         String
  birthdate        DateTime
  biography        String?
  shareableSection String?
  isOpenToWork     Boolean?
  isFreelancer     Boolean?
  image            String?
  createdAt        DateTime
  updatedAt        DateTime
}
